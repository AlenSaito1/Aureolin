{
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "ESNext",
            "DOM"
        ],                         
        "module": "commonjs",
        "outDir": "./dist",                        
        "resolveJsonModule": true,
        "strict": true,                           
        "esModuleInterop": true,                  
        "skipLibCheck": true,
        "jsx": "react",   
        "jsxFactory": "h",              
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests/**/*"
    ]
}